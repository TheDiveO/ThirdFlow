tr.tfc-plugin-info-element td {
  padding-top: 0.4ex;
  padding-bottom: 0.4ex;
  white-space: nowrap;
  vertical-align: baseline;
}

td.tfc-plugin-info-element-name {
  text-align: right;
  vertical-align: baseline;
  background-color: <<colour table-header-background>>;
  font-weight: bold;
}

td.tfc-plugin-info-element-value {
  text-align: left;
  vertical-align: top;
}

span.tfc-plugin-info-unspecified {
  font-style: italic;
  color: <<colour very-muted-foreground>>;
}

span.tfc-plugin-info-unspecified:before {
  font-style: normal;
  content: "(";
}

span.tfc-plugin-info-unspecified:after {
  font-style: normal;
  content: ")";
  padding-left: 0.15em;
}